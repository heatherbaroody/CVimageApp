
CVtest:
<CustButton@Button>:
    font_size: 18
    font_name: 'DejaVuSans'
    bold: True
    color: 1,1,1,1
    background_normal: ''
    background_color: 0.35, 0.12, 0.27, 1
    
<Cust2Button@Button>:
    font_size: 18
    font_name: 'DejaVuSans'
    bold: True
    color: 1,1,1,1
    background_normal: ''
    background_color: 0.5, 0.2, 0.7, 1

<CVtest>:
    canvas.before:
        Color: 
            rgba: 0.25, 0.25, 0.25, 1
        Rectangle: 
            pos: self.pos
            size: self.size
    orientation: "vertical"
    spacing: 10
    padding: 10,10,10,0
    Label:
        height: "10sp"
        text: "Cyclic Voltammogram Processor"
        font_size: 24
        bold: True

    Camera:
        height: '200dp'
        size_hint_y: None
        id: camera
        resolution: (700, 900)
        play: False
    BoxLayout:
        size_hint_y: None
        height: '70dp'
        Label:
            size_hint_x: 10
        Button:
            text: 'Play'
            on_press: camera.play  = not camera.play
            size_hint_x: 37.5
        Label:
            size_hint_x: 5
        Button:
            text: 'Capture'
            on_press: root.capture()
            on_release: camera.play = not camera.play
            size_hint_x: 37.5
        Label:
            size_hint_x: 10
 #   Image:
 #       size_hint_y: None
 #       height: '200dp'
 #       source: 'IMG_.png'
 #       id: cvplot
    BoxLayout:
        height: "70sp"
        size_hint_y: None
        Label:
            size_hint_x: 10
        CustButton:
            text: "Process"
            #on_press: root.analyzeButton(cvplot.source)
            on_press: root.analyzeButton('IMG_.png')
            id: result 
            size_hint_x: 37.5
        Label:
            size_hint_x: 5
        Label:
            size_hint_x: 37.5
            text: root.CVresult
            id: entry
            font_name: 'DejaVuSans'
            font_size: 24
            bold: True
        Label:
            size_hint_x: 10
    BoxLayout:
        height: "70sp"
        size_hint_y: None
        Label:
            size_hint_x: 10
        CustButton:
            text: "Process KNN"
            #on_press: root.KNNanalyzeButton(cvplot.source)
            on_press: root.KNNanalyzeButton('IMG_.png')
            id: KNNresult 
            size_hint_x: 37.5
        Label:
            size_hint_x: 5
        BoxLayout:
            size_hint_y: None
            orientation: 'vertical'
            size_hint_x: 37.5
            Label:
                heigth: "10sp"
            Label:
                text: root.KNNresult
                id: KNNentry
                font_name: 'DejaVuSans'
                font_size: 18
                bold: True
            Label:
                text: root.KNNfacetnames
                id: Facets
                font_name: 'DejaVuSans'
                font_size: 12
                bold: True
        Label:
            size_hint_x: 10
